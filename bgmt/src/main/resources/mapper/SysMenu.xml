<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.damon.bgmt.DAO.SysMenuDAO">
    <resultMap id="resultMap" type="com.damon.bgmt.domain.form.SysMenuForm"/>

    <!-- 多条件分页查询菜单信息-->
    <select id="findAll" parameterType="string" resultMap="resultMap">
        SELECT
        a.*,
        b.name AS is_valid_name
        FROM
        `sys_menu` a
        LEFT JOIN `sys_dictionaries` b
        ON a.is_leaf = b.value
        AND b.ref_code = 'is_valid'
        WHERE 1=1
        <if test="name != null and name != ''">
            AND a.`name` LIKE concat('%',#{name} , '%')
        </if>
        <if test="isValid != null">
            AND a.`is_valid` =#{isValid}
        </if>
        ORDER BY a.name ASC
        LIMIT #{pageStart, jdbcType=INTEGER},#{pageSize,jdbcType=INTEGER}
    </select>

    <!-- 根据条件查询菜单总数-->
    <select id="findTotal" resultType="int">
        SELECT
        COUNT(a.id)
        FROM
        `sys_menu` a
        WHERE 1=1
        <if test="name != null and name != ''">
            AND a.`name` LIKE concat('%',#{name} , '%')
        </if>
        <if test="isValid != null">
            AND a.`is_valid` =#{isValid}
        </if>
    </select>

    <!-- 插入菜单信息 -->
    <insert id="add" parameterType="com.damon.bgmt.domain.SysMenu">
		INSERT INTO
		    `sys_menu` (
		  `id`,
		  `name`,
		  `is_valid`,
		  `update_user_id`,
		  `update_time`,
		  `create_user_id`,
		  `create_time`,
		  `remark`
		)
		VALUES
		  (
		  #{id},
		  #{name},
		  #{isValid},
		  #{updateUserId},
		  #{updateTime},
		  #{creatUserId},
		  #{createTime},
		  #{remark}
		  )
	</insert>

    <!--根据编号删除菜单信息-->
    <delete id="delete" parameterType="com.damon.bgmt.domain.SysMenu">
	   delete
       sys_menu
       WHERE
       id=#{id}
    </delete>

    <!-- 根据ID更新菜单信息 -->
    <update id="update" parameterType="com.damon.bgmt.domain.SysMenu">
        UPDATE
        sys_menu
        SET
        name = #{name},
        is_valid = #{isValid},
        update_user_id = #{updateUserId},
        update_time = #{updateTime},
        remark = #{remark}
        WHERE id= #{id}
    </update>

    <!--根据编号查询菜单信息-->
    <select id="findObj" parameterType="string" resultMap="resultMap">
        SELECT
        a.*,
        b.name AS is_valid_name
        FROM
        `sys_menu` a
        LEFT JOIN `sys_dictionaries` b
        ON a.is_leaf = b.value
        AND b.ref_code = 'is_valid'
        WHERE 1 = 1
        <if test="id != null and id != ''">
            AND a.`id` =#{id}
        </if>
        <if test="name != null and name != ''">
            AND a.`name` =#{name}
        </if>
    </select>

</mapper>